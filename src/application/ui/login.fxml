<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>

<?import javafx.scene.control.PasswordField?>
<Stage xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ui.LoginController">
    <scene>
        <Scene>
            <AnchorPane fx:id="loginPane" prefHeight="200" prefWidth="200" onMouseMoved="#init">
                <children>
                   <Label alignment="CENTER" layoutX="66.0" layoutY="14.0" prefHeight="17.0" prefWidth="69.0" text="Login" textAlignment="CENTER" AnchorPane.topAnchor="10.0">
                      <font>
                         <Font size="18.0" />
                      </font>
                   </Label>
                   <TextField fx:id="userText" layoutX="20.0" layoutY="47.0" promptText="Username" onKeyPressed="#loginOnKeyPressedHandler"/>
                   <PasswordField fx:id="passText" layoutX="20.0" layoutY="87.0" promptText="Password" onKeyPressed="#loginOnKeyPressedHandler"/>
                   <Button fx:id="goBtn" layoutX="49.0" layoutY="123.0" mnemonicParsing="false" onMouseClicked="#attemptLogin" text="Go" />
                   <Button fx:id="exitBtn" layoutX="116.0" layoutY="123.0" mnemonicParsing="false" onMouseClicked="#exitBtnPress" text="Exit" />
                   <Label fx:id="badCredsLabel" alignment="CENTER" layoutX="6.0" layoutY="154.0" prefHeight="38.0" prefWidth="186.0" text="Invalid Credentials." textAlignment="CENTER" textFill="#d70808" visible="false" wrapText="true" />
                </children>
            </AnchorPane>
        </Scene>
    </scene>
</Stage>
